<form method="post" action="/prints/<%= @print.id %>">
  <label for="title">Title:</label>
  <input
  type="text"
  name="title"
  id="title"
  value="<%= @print.title %>"
  />

  <select name="artist_id">
    <% for artist in @artists %>
    <option value="<%= artist.id %>" <%= "selected" if artist.id == @print.artist_id %>><%= artist.full_name() %></option>
    <% end %>
  </select>

  <label for="description">Description:</label>
  <input
  type="text"
  name="description"
  id="description"
  value="<%= @print.description %>"
  />

  <label for="wholesale-cost">Wholesale Cost:</label>
  <input
  type="text"
  name="wholesale_cost"
  id="wholesale-cost"
  value="<%= @print.wholesale_cost %>"
  />

  <label for="retail-price">Retail Price:</label>
  <input
  type="text"
  name="retail_price"
  id="retail-price"
  value="<%= @print.retail_price %>"
  />

  <label for="quantity">Quantity:</label>
  <input
  type="text"
  name="quantity"
  id="quantity"
  value="<%= @print.quantity %>"
  />

  <input type='submit' value="Edit Print">
</form>
